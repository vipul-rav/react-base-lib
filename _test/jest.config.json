{
    "collectCoverageFrom": [
        "<rootDir>/src/**/*.{js,jsx}",
        "!<rootDir>/src/index.js",
        "!<rootDir>/**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "errorOnDeprecated": true,
    "moduleNameMapper": {
        "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
          "<rootDir>/_test/jest-support/jest.fileMock.js",
        "\\.(css|less)$": "<rootDir>/_test/jest-support/jest.styleMock.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/_test/jest-support/jest.setupTests.js",
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "testMatch": [
        "**/?(*.)test.js?(x)"
    ],
    "transform": {
        "^.+\\.jsx?$": "<rootDir>/_test/jest-support/jest.transform.js"
    }
}
